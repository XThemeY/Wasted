{
  "name": "wasted_server",
  "version": "1.0.0",
  "description": "Sync movies server for WastedPro.",
  "type": "module",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev1": "nodemon --exec node --no-warnings=ExperimentalWarning --loader ts-node/esm src/main.ts",
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "moment-timezone": "^0.5.45",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.8",
    "pino": "^8.20.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "request-ip": "^3.3.0",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.33.2",
    "translate": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.15",
    "@types/serve-favicon": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^7.6",
    "@typescript-eslint/parser": "^7.6",
    "eslint": "^8.56",
    "eslint-config-prettier": "^9.1",
    "eslint-plugin-jest": "^28.2",
    "fs-extra": "^11.2.0",
    "jest": "^29.7",
    "mongodb": "^6.6.1",
    "prettier": "^3.2",
    "rimraf": "^5.0",
    "ts-api-utils": "^1.3",
    "ts-jest": "^29.1",
    "tslib": "^2.6",
    "tsx": "^4.7.2",
    "typescript": "^5.4"
  },
  "imports": {
    "#*": "./src/*",
    "#middleware/*": "./src/middleware/*",
    "#utils/*": "./src/utils/*",
    "#config/*": "./src/config/*",
    "#services/*": "./src/services/*",
    "#db/*": "./src/database/*",
    "#api/*": "./src/api/*"
  },
  "author": "XTheme",
  "license": "Apache-2.0",
  "volta": {
    "node": "20.12.2"
  }
}
