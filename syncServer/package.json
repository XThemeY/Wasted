{
  "name": "wasted_sync-server",
  "version": "1.0.0",
  "description": "Sync server for WastedPro.",
  "type": "module",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "devFix": "tsx src/utils/fixer.ts",
    "dev1": "nodemon --exec node --no-warnings=ExperimentalWarning --loader ts-node/esm src/main.ts",
    "start": "node ./src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "nanoid": "^5.0.4",
    "pino": "^8.20.0",
    "pino-http": "^10.1.0",
    "pino-pretty": "^11.0.0",
    "sharp": "^0.33.2",
    "translate": "^3.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7.6",
    "@typescript-eslint/parser": "^7.6",
    "eslint": "^8.56",
    "eslint-config-prettier": "^9.1",
    "eslint-plugin-jest": "^28.2",
    "fs-extra": "^11.2.0",
    "prettier": "^3.2",
    "rimraf": "^5.0",
    "supertest": "^7.0.0",
    "ts-api-utils": "^1.3",
    "tslib": "^2.6",
    "tsx": "^4.7.2",
    "typescript": "^5.4"
  },
  "baseUrl": "./",
  "imports": {
    "#*": "./build/*",
    "#middleware/*": "./build/middleware/*",
    "#utils/*": "./build/utils/*",
    "#config/*": "./build/config/*",
    "#db/*": "./build/database/*",
    "#api/*": "./build/api/*"
  },
  "author": "XTheme",
  "license": "Apache-2.0",
  "volta": {
    "node": "20.12.2"
  }
}
